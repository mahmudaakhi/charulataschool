<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataretrive">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/logoimage"
        android:transitionName="logo_image" />

    <EditText
        android:id="@+id/admin_name"
        android:drawableLeft="@drawable/ic_people_black_24dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Admin Name"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/admin_password"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_below="@+id/admin_name"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:inputType="number" />

    <Button
        android:id="@+id/adminlogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/admin_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Admin Login" />

</RelativeLayout>